<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <ImageView
            android:id="@+id/firtImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_img"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/text1"
            android:layout_below="@+id/firtImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#32E0C4"
            android:textSize="26sp"
            android:layout_marginTop="80dp"
            android:text="All You Need to"/>

        <TextView
            android:id="@+id/text2"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#32E0C4"
            android:textSize="26sp"
            android:text="Know About Covid 19"/>



    </RelativeLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="This Material UI "
            android:textColor="#858585"
            android:textSize="26sp"

            android:textStyle="bold"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Designed By Burak Selcuk"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:textColor="#858585"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/bSearch"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Start Now"
            android:textColor="@color/teal_200"
            android:theme="@style/Theme.AppCompat"

            android:drawableRight="@drawable/right" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>


    </LinearLayout>


</LinearLayout>